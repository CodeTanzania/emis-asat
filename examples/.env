# environment
NODE_ENV=development
PORT=5000

# request logger(morgan)
LOG_ENABLED=true
LOG_FORMAT=combined


# static serve
SERVE_STATIC=true
SERVE_STATIC_PATH=public


# body parser
BODY_PARSER_LIMIT=2mb
BODY_PARSER_JSON_TYPE=application/json

# api version
API_VERSION=1.0.0

# helmet
HELMET_HSTS=false

# mquery
MQUERY_LIMIT=10
MQUERY_MAX_LIMIT=50

# locales
DEFAULT_LOCALE=en
LOCALES=en,sw

# party types
DEFAULT_PARTY_TYPE=Other
PARTY_TYPES=Sector,Individual,Committe,Team,Department,Other

# party ownership
DEFAULT_PARTY_OWNERSHIP=Other
PARTY_OWNERSHIP=Government,Private,Other

# role types
DEFAULT_ROLE_TYPE=System
ROLE_TYPES=System,Assignable

# disaster management phases
DEFAULT_DISASTER_PHASES=Mitigation
DISASTER_PHASES=Mitigation,Preparedness,Response,Recovery
